<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#032642"
    tools:context=".Full_Quotes">

    <LinearLayout
        android:id="@+id/LL2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#032642"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/Crd3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/txtAName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient"
                android:gravity="center"
                android:text="Author Name"
                android:textColor="@color/white" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/Crd4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/txtCName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient"
                android:gravity="center"
                android:text="Category"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RL1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/LL2"
        android:background="#032642">

        <androidx.cardview.widget.CardView
            android:id="@+id/Crd2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp"
            app:cardCornerRadius="20dp">

            <RelativeLayout
                android:id="@+id/RL2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/quotesImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img" />

                <TextView
                    android:id="@+id/Slogans"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Standing alone is better than\n standing with people who\n don't value you."
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/LL1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgLike"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_favorite_border_24" />

            <TextView
                android:id="@+id/line1"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#80FFFFFF" />

            <ImageView
                android:id="@+id/imgDownload"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/save1"
                android:tint="@color/white"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/line2"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#80FFFFFF" />

            <ImageView
                android:id="@+id/imgCopy"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_content_copy_24" />

            <TextView
                android:id="@+id/line3"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#80FFFFFF" />

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_share_24" />

            <TextView
                android:id="@+id/line4"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="#80FFFFFF" />

            <ImageView
                android:id="@+id/imgSpeak"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/volume"
                android:tint="@color/white"
                tools:ignore="UseAppTint" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>